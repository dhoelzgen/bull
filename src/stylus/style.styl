@import "_mixins.styl"

html
  width 100%
  height 100%
  margin 0px
  overflow hidden

body
  padding 0
  margin 0
  font 15px 'SilkscreenNormal', Arial, sans-serif
  background-color #fff
  text-align: center
  color #000
  height 100%

h1, h2, h3
  font-weight normal

#game
  position absolute
  top 40px
  left 0
  right 0
  bottom 80px
  width auto
  height auto
  margin auto

.footer
  position absolute
  bottom 12px
  width 100%
  text-align center
